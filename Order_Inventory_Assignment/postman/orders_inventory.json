          "raw": "{{base_url}}/products",
          "host": ["{{base_url}}"],
          "path": ["products"]
        }
      },
      "response": []
    },
    {
      "name": "Get Product by ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/products/{{product_id}}",
          "host": ["{{base_url}}"],
          "path": ["products", "{{product_id}}"]
        }
      },
      "response": []
    },
    {
      "name": "Update Product",
      "request": {
        "method": "PUT",
        "header": [

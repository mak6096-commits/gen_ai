          "host": ["{{base_url}}"],
          "path": ["orders", "{{order_id}}"]
        }
      },
      "response": []
    },
    {
      "name": "Update Order Status",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"status\": \"PAID\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/orders/{{order_id}}",
          "host": ["{{base_url}}"],
          "path": ["orders", "{{order_id}}"]
        }
      },
      "response": []
    },
    {
      "name": "Payment Webhook",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "X-Webhook-Signature",
            "value": "{{webhook_signature}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"event_type\": \"payment.succeeded\",\n  \"order_id\": {{order_id}},\n  \"payment_id\": \"pay_123456\",\n  \"amount\": 89.97,\n  \"timestamp\": \"2024-01-01T12:00:00Z\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/webhooks/payment",
          "host": ["{{base_url}}"],
          "path": ["webhooks", "payment"]
        }
      },
      "response": []
    },
